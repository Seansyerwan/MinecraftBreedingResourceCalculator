<Window x:Class="MinecraftBreedingCalculatorGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MinecraftBreedingCalculatorGui"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="AliceBlue">
    <Grid Background="Aquamarine">
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Margin="19,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="174" TextChanged="TextBox_TextChanged" Height="22"/>
        <Button Content="Submit" HorizontalAlignment="Left" Margin="19,139,0,0" VerticalAlignment="Top" Click="Button_Click" RenderTransformOrigin="-0.024,0.403"/>
        <TextBlock HorizontalAlignment="Left" Margin="19,34,0,0" TextWrapping="Wrap" Text="How many animals do you have?" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox2" HorizontalAlignment="Left" Margin="19,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="174" TextChanged="TextBox_TextChanged" Height="22"/>
        <TextBlock HorizontalAlignment="Left" Margin="19,77,0,0" TextWrapping="Wrap" Text="How many animals do you wish to get?" VerticalAlignment="Top"/>
    </Grid>
</Window>
